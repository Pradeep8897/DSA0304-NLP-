import spacy

nlp = spacy.load("en_core_web_sm")
text = "The quick brown fox jumps over the lazy dog near the river."
doc = nlp(text)

print("Noun Phrases and Meanings:\n")

for np in doc.noun_chunks:
    print(f"Noun Phrase: {np.text}")
    head = np.root.text
    modifiers = [tok.text for tok in np if tok.dep_ in ("amod", "compound")]
    meaning = f"'{head}' modified by {', '.join(modifiers)}" if modifiers else f"'{head}'"
    print("Meaning:", meaning)
    print("-" * 40)


output:
Noun Phrases and Meanings:

Noun Phrase: The quick brown fox
Meaning: 'fox' modified by quick, brown

Noun Phrase: the lazy dog
Meaning: 'dog' modified by lazy

Noun Phrase: the river
Meaning: 'river'
